extends: default

rules:
  indentation:
    spaces: 2
    indent-sequences: consistent

  line-length:
    max: 120
    level: warning

  trailing-spaces:
    level: error

  empty-lines:
    max: 2
    level: warning

  comments:
    require-starting-space: true
    min-spaces-from-content: 2

  document-start:
    present: false

  truthy:
    allowed-values:
      - 'true'
      - 'false'
      - 'yes'
      - 'no'
      - 'on'
      - 'off'
