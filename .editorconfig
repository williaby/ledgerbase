root = true

[*]
indent_style = space
indent_size = 4
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 88 # Use 88 for black, or 79 for flake8 strict

[*.md]
trim_trailing_whitespace = false

[*.py]
indent_style = space
indent_size = 4
max_line_length = 88 # Align with Python style tools

[*.json]
indent_style = space
indent_size = 2
